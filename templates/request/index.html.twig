{% extends 'base.html.twig' %}

{% block title %}Hello RequestController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        For each request, you can see the name of the movie.
        {{ requests|length }} request(s) found.

        {% for request in requests %}
            <div>
                <h2>{{ request.movie.title }} ({{ request.dateCreated | date('d/m/Y') }})</h2>
            </div>
        {% endfor %}

        {% if previous >= 0 %}
            <a href="{{ path('app_request', { offset: previous }) }}">Previous</a>
        {% endif %}

        {% if next < requests|length %}
            <a href="{{ path('app_request', { offset: next }) }}">Next</a>
        {% endif %}
    </div>
{% endblock %}
