{% extends 'base.html.twig' %}

{% block title %}Film {{ movie.title }}{% endblock %}

{% block body %}
    <div class="container-fluid pt-4 px-4">
        <div class="bg-secondary text-center rounded p-4">
            <h1 class="display-1">{{ movie.title }}</h1>
            {{ form_start(addImageForm) }}
            {{ form_row(addImageForm.imageFile) }}
            {% if errors %}
                <div class="alert alert-danger">
                    {% for error in errors %}
                        {{ error }}
                        <br>
                    {% endfor %}
                </div>
            {% endif %}
                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Upload</button>
            {{ form_end(addImageForm) }}
        </div>
    </div>
    {% if movie.hasImage %}
        <div class="container-fluid pt-4 px-4">
            <div class="bg-secondary text-center rounded p-4">
                <h1 class="display-6">Current Poster</h1>
                <img src="{{ asset('uploads/movie_posters/' ~ movie.id ~ '.jpg') }}" alt="{{ movie.title }} poster" class="w-25 img-fluid">
            </div>
        </div>
    {% endif %}
{% endblock %}
